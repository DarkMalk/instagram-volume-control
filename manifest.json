{
  "manifest_version": 3,
  "name": "Instagram Volume Control",
  "version": "1.0",
  "description": "Control de volumen para Instagram",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://instagram.com/*", "https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
